@using Microsoft.AspNetCore.Mvc.Rendering
@using BlueRaven.Web.Models;

@model BlogModel

<div class="pager">
    <ul class="pagination">
        @{
			if(Model.PageCount > 1 )
			{
				if (Model.HasPreviousPage)
				{
					<li><a asp-route-page="@Model.PreviousPage"><i class="material-icons">chevron_left</i></a></li>
				}
				for (int i = 1; i <= Model.PageCount; i++)
				{
					if (i  == Model.Page)
					{
						<li><a class="selected" asp-route-page="@i">@i</a></li>
					}
					else
					{
						<li><a asp-route-page="@i">@i</a></li>
					}
				}
				if (Model.HasNextPage)
				{
					<li><a asp-route-page="@Model.NextPage"><i class="material-icons">chevron_right</i></a></li>
				}
			}
        }
    </ul>
</div>