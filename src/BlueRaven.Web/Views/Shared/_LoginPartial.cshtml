@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a></li>
    <form class="right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
            <li><button type="submit" class="btn mr25">Logout</button></li>
    </form>
}
else
{
	<li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
	<li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
}